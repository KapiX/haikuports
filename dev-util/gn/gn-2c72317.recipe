SUMMARY="A meta-build system that generates build files for Ninja"
DESCRIPTION="GN is a meta-build system that generates build files for Ninja"
HOMEPAGE="https://gn.googlesource.com/"
COPYRIGHT="2008-2019 The Chromium Authors."
LICENSE="BSD (3-clause)"
REVISION="1"
srcGitRev="2c72317e3a1f579c6a527c067ed575c0b92e544e"
SOURCE_URI="https://gn.googlesource.com/gn/+archive/$srcGitRev.tar.gz"
CHECKSUM_SHA256="c180838996a6f0e77cbece31ec0fc03f75a43fdb2d0fa3d9233610ca98157aaa"
SOURCE_FILENAME="gn-$portVersion-$srcGitRev.tar.gz"
SOURCE_DIR=""
PATCHES="gn-$portVersion.patchset"

ARCHITECTURES="!x86_gcc2 x86 x86_64"
if [ "$targetArchitecture" = x86_gcc2 ]; then
SECONDARY_ARCHITECTURES="x86"
fi

commandBinDir=$binDir
if [ "$targetArchitecture" = x86_gcc2 ]; then
	commandBinDir=$prefix/bin
fi

PROVIDES="
	gn$secondaryArchSuffix = $portVersion
	cmd:gn = $portVersion
	"
REQUIRES="
	haiku$secondaryArchSuffix
	"

BUILD_REQUIRES="
	haiku${secondaryArchSuffix}_devel
	"
BUILD_PREREQUIRES="
	cmd:gcc$secondaryArchSuffix
	cmd:g++$secondaryArchSuffix
	cmd:ninja
	cmd:python
	cmd:git
	cmd:sed
	"

BUILD()
{
	export CC=gcc
	export CXX=g++

	GN_COMMIT_VERSION_SHORT=`echo $portVersion | cut -c 1-7`

	sed  -i \
		"s/(999999, \"091169b\")/(\"01473\", \"$GN_COMMIT_VERSION_SHORT\")/g" \
		build/gen.py

	python build/gen.py --host haiku --platform=haiku
	ninja -C out $jobArgs
}

INSTALL()
{
	mkdir -p $commandBinDir
	cp out/gn $commandBinDir
}

TEST()
{
	./out/gn_unittests
}
